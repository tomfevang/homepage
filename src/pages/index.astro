---
// src/pages/index.astro
// Your personal portfolio homepage
const projects = [
  {
    title: "Tripletex Reconciliation",
    description: "System for streamlining the process of reconciling accounting periods, all inside Tripletex",
    tags: ["TypeScript", "React", "Kotlin", "Spring"],
    href: "#",
  },
  {
    title: "One Platform",
    description: "Platform for applying for refinancing across dozens of vendors, built on AWS using events for fully asynchronous processing",
    tags: ["Golang", "AWS", "Event-driven Architecture"],
    href: "#",
  },
  {
    title: "Insurance Management Portal",
    description: "Portal for businesses to manage their employees insurances",
    tags: ["TypeScript", "React", "Java", "Spring"],
    href: "#",
  },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tom Fevang — Developer</title>
    <meta name="description" content="Personal portfolio of Tom Fevang, a software developer." />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500&family=Syne:wght@400;600;800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <!-- Noise texture overlay -->
    <div class="noise"></div>

    <!-- CRT overlay -->
    <div class="crt-vignette"></div>

    <!-- Grid lines background -->
    <div class="grid-bg"></div>

    <nav>
      <span class="nav-logo">TF<span class="blink">_</span></span>
      <ul>
        <li><a href="#projects">projects</a></li>
        <li><a href="#contact">contact</a></li>
        <li>
          <a href="https://github.com/tomfevang" target="_blank" rel="noopener" class="nav-cta">
            github ↗
          </a>
        </li>
      </ul>
    </nav>

    <!-- ── HERO ── -->
    <section id="hero">
      <div class="hero-eyebrow">
        <span class="dot"></span>
        <span>currently employed</span>
      </div>

      <h1>
        <span class="line line-1">Tom</span>
        <span class="line line-2">Fevang<span class="accent">.</span></span>
      </h1>

      <p class="hero-sub">
        Software developer building things for the web.<br />
        Focused on performance, clean architecture, and craft.
      </p>

      <div class="hero-tags">
        <span>TypeScript</span>
        <span>Golang</span>
        <span>Java/Kotlin</span>
        <span>Systems</span>
      </div>

      <div class="hero-scroll">
        <span class="scroll-line"></span>
        <span>scroll</span>
      </div>
    </section>

    <!-- ── PROJECTS ── -->
    <section id="projects">
      <div class="section-header">
        <span class="section-num">01</span>
        <h2>Selected Work</h2>
      </div>

      <div class="projects-grid">
        {
          projects.map((project, i) => (
            <a href={project.href} class="project-card" data-index={String(i + 1).padStart(2, "0")}>
              <div class="card-inner">
                <div class="card-top">
                  <span class="card-num">{String(i + 1).padStart(2, "0")}</span>
                  <span class="card-arrow">↗</span>
                </div>
                <h3>{project.title}</h3>
                <p>{project.description}</p>
                <div class="card-tags">
                  {project.tags.map((tag) => (
                    <span>{tag}</span>
                  ))}
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </section>

    <!-- ── CONTACT ── -->
    <section id="contact">
      <div class="section-header">
        <span class="section-num">02</span>
        <h2>Get In Touch</h2>
      </div>

      <div class="contact-body">
        <p class="contact-lead">
          Have a project in mind or want to chat?<br />
          My inbox is always open.
        </p>

        <div class="contact-links">
          <a href="https://github.com/tomfevang" target="_blank" rel="noopener" class="contact-link">
            <span class="link-label">github</span>
            <span class="link-value">@tomfevang ↗</span>
          </a>
          <a href="https://linkedin.com/in/tom-fevang" target="_blank" rel="noopener" class="contact-link">
            <span class="link-label">linkedin</span>
            <span class="link-value">tom-fevang ↗</span>
          </a>
        </div>
      </div>
    </section>

    <footer>
      <span>© 2026 Tom Fevang</span>
      <span>Built with Astro</span>
    </footer>
  </body>
</html>

<style is:global>
  *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

  :root {
    --bg:       #090b0f;
    --surface:  #0e1117;
    --border:   #1e2430;
    --text:     #c8d0e0;
    --muted:    #91979e;
    --accent:   #00e5ff;
    --accent2:  #7b61ff;
    --font-head: 'Syne', sans-serif;
    --font-mono: 'IBM Plex Mono', monospace;
  }

  html { scroll-behavior: smooth; overflow-x: hidden; }

  body {
    background: var(--bg);
    color: var(--text);
    font-family: var(--font-mono);
    font-size: 14px;
    line-height: 1.7;
    overflow-x: hidden;
  }

  /* ── Noise & Grid ── */
  .noise {
    position: fixed; inset: 0; z-index: 100;
    pointer-events: none;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='1'/%3E%3C/svg%3E");
    opacity: 0.03;
  }

  .grid-bg {
    position: fixed; inset: 0; z-index: 0; pointer-events: none;
    background-image:
      linear-gradient(var(--border) 1px, transparent 1px),
      linear-gradient(90deg, var(--border) 1px, transparent 1px);
    background-size: 60px 60px;
    opacity: 0.4;
  }

  .crt-vignette {
    position: fixed; inset: 0; z-index: 102;
    pointer-events: none;
    background: radial-gradient(
      ellipse at center,
      transparent 40%,
      rgba(0, 0, 0, 0.50) 100%
    );
  }

 /* ── Nav ── */
  nav {
    position: fixed; top: 0; left: 0; right: 0;
    z-index: 200;
    display: flex; align-items: center; justify-content: space-between;
    padding: 1.25rem 3rem;
    backdrop-filter: blur(12px);
    background: rgba(9, 11, 15, 0.7);
    border-bottom: 1px solid var(--border);
  }

  .nav-logo {
    font-family: var(--font-head);
    font-weight: 800;
    font-size: 1.1rem;
    color: #fff;
    letter-spacing: 0.05em;
  }

  .blink { animation: blink 1.1s step-end infinite; color: var(--accent); }
  @keyframes blink { 0%, 100% { opacity: 1; } 50% { opacity: 0; } }

  nav ul { list-style: none; display: flex; gap: 2rem; align-items: center; }
  nav a {
    color: var(--muted); text-decoration: none;
    font-size: 0.8rem; letter-spacing: 0.08em;
    transition: color 0.2s;
  }
  nav a:hover { color: var(--accent); }
  .nav-cta {
    border: 1px solid var(--border);
    padding: 0.4rem 0.9rem;
    color: var(--text) !important;
    transition: border-color 0.2s, color 0.2s !important;
  }
  .nav-cta:hover { border-color: var(--accent) !important; color: var(--accent) !important; }

  /* Hide projects and contact links on small screens */
  @media (max-width: 640px) {
    nav ul li:not(:last-child) {
      display: none;
    }
  }

  /* ── Hero ── */
  #hero {
    position: relative; z-index: 1;
    min-height: 100vh;
    display: flex; flex-direction: column; justify-content: center;
    padding: 10rem 3rem 6rem;
    max-width: 1100px; margin: 0 auto;
  }

  .hero-eyebrow {
    display: flex; align-items: center; gap: 0.6rem;
    font-size: 0.75rem; letter-spacing: 0.15em; text-transform: uppercase;
    color: var(--muted); margin-bottom: 2rem;
    animation: fadeUp 0.6s ease both;
  }
  .dot {
    width: 7px; height: 7px; border-radius: 50%;
    background: var(--accent2);
    box-shadow: 0 0 8px var(--accent2);
    animation: pulse 2s ease-in-out infinite;
  }
  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(0.8); }
  }

  h1 {
    font-family: var(--font-head);
    font-weight: 800;
    font-size: clamp(3.5rem, 12vw, 9rem);
    line-height: 0.92;
    color: #fff;
    letter-spacing: -0.02em;
    margin-bottom: 2rem;
  }
  .accent { color: var(--accent); }

  .line { display: block; overflow: hidden; padding-bottom: 0.15em; margin-bottom: -0.15em; }
  .line-1 { animation: slideIn 0.7s cubic-bezier(0.16, 1, 0.3, 1) 0.1s both; }
  .line-2 { animation: slideIn 0.7s cubic-bezier(0.16, 1, 0.3, 1) 0.22s both; }

  @keyframes slideIn {
    from { transform: translateY(110%); opacity: 0; }
    to   { transform: translateY(0);    opacity: 1; }
  }
  @keyframes fadeUp {
    from { transform: translateY(20px); opacity: 0; }
    to   { transform: translateY(0);    opacity: 1; }
  }

  .hero-sub {
    font-size: 0.95rem;
    color: var(--muted);
    max-width: 480px;
    margin-bottom: 2.5rem;
    animation: fadeUp 0.7s ease 0.4s both;
  }

  .hero-tags {
    display: flex; flex-wrap: wrap; gap: 0.5rem;
    margin-bottom: 4rem;
    animation: fadeUp 0.7s ease 0.55s both;
  }
  .hero-tags span {
    font-size: 0.72rem; letter-spacing: 0.1em; text-transform: uppercase;
    border: 1px solid var(--border);
    padding: 0.3rem 0.8rem;
    color: var(--accent2);
  }

  .hero-scroll {
    display: flex; align-items: center; gap: 0.75rem;
    font-size: 0.72rem; letter-spacing: 0.12em; text-transform: uppercase;
    color: var(--muted);
    animation: fadeUp 0.7s ease 0.7s both;
  }
  .scroll-line {
    display: block; width: 40px; height: 1px;
    background: linear-gradient(to right, var(--accent), transparent);
  }

  /* Glow orb */
  #hero::before {
    content: '';
    position: absolute;
    top: 20%; left: 60%;
    width: 500px; height: 500px;
    background: radial-gradient(circle, rgba(0,229,255,0.06) 0%, transparent 70%);
    pointer-events: none;
  }

  /* ── Sections ── */
  section { position: relative; z-index: 1; }
  #projects, #contact {
    max-width: 1100px; margin: 0 auto;
    padding: 6rem 3rem;
  }

  .section-header {
    display: flex; align-items: baseline; gap: 1.5rem;
    margin-bottom: 3rem;
    border-bottom: 1px solid var(--border);
    padding-bottom: 1.25rem;
  }
  .section-num {
    font-size: 0.7rem; letter-spacing: 0.15em;
    color: var(--accent); opacity: 0.7;
  }
  h2 {
    font-family: var(--font-head);
    font-weight: 600;
    font-size: 1.6rem;
    color: #fff;
    letter-spacing: -0.01em;
  }

  /* ── Project Cards ── */
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1px;
    background: var(--border);
    border: 1px solid var(--border);
  }

  .project-card {
    background: var(--surface);
    text-decoration: none; color: inherit;
    display: block;
    transition: background 0.2s;
  }
  .project-card:hover { background: #111622; }
  .project-card:hover .card-arrow { opacity: 1; transform: translate(2px, -2px); }

  .card-inner { padding: 2rem; }

  .card-top {
    display: flex; justify-content: space-between; align-items: center;
    margin-bottom: 1.5rem;
  }
  .card-num { font-size: 0.65rem; color: var(--accent); letter-spacing: 0.1em; }
  .card-arrow {
    color: var(--muted); opacity: 0;
    transition: opacity 0.2s, transform 0.2s;
  }

  .project-card h3 {
    font-family: var(--font-head);
    font-size: 1.25rem; font-weight: 600;
    color: #fff; margin-bottom: 0.75rem;
    letter-spacing: -0.01em;
  }
  .project-card p {
    font-size: 0.8rem; color: var(--muted);
    margin-bottom: 1.5rem; line-height: 1.6;
  }
  .card-tags { display: flex; flex-wrap: wrap; gap: 0.4rem; }
  .card-tags span {
    font-size: 0.65rem; letter-spacing: 0.1em; text-transform: uppercase;
    color: var(--accent2);
    border: 1px solid rgba(123,97,255,0.2);
    padding: 0.2rem 0.6rem;
  }

  /* ── Contact ── */
  .contact-body { display: flex; flex-direction: column; gap: 3rem; }
  .contact-lead {
    font-size: 1.05rem; color: var(--text);
    max-width: 440px; line-height: 1.8;
  }

  .contact-links { display: flex; flex-direction: column; gap: 0; }
  .contact-link {
    display: flex; align-items: center; justify-content: space-between;
    padding: 1.25rem 0;
    border-bottom: 1px solid var(--border);
    text-decoration: none; color: inherit;
    transition: padding-left 0.2s;
  }
  .contact-link:first-child { border-top: 1px solid var(--border); }
  .contact-link:hover { padding-left: 0.5rem; }
  .contact-link:hover .link-value { color: var(--accent); }

  .link-label {
    font-size: 0.7rem; letter-spacing: 0.15em; text-transform: uppercase;
    color: var(--muted); width: 80px;
  }
  .link-value {
    font-size: 0.85rem; color: var(--text);
    transition: color 0.2s;
  }

  /* ── Footer ── */
  footer {
    position: relative; z-index: 1;
    display: flex; justify-content: space-between; align-items: center;
    padding: 1.5rem 3rem;
    border-top: 1px solid var(--border);
    font-size: 0.72rem; letter-spacing: 0.08em;
    color: var(--muted);
  }

  /* ── Responsive ── */
  @media (max-width: 640px) {
    nav { padding: 1rem 1.25rem; }
    nav ul { gap: 1.2rem; }
    #hero { padding: 8rem 1.25rem 4rem; }
    #projects, #contact { padding: 4rem 1.25rem; }
    footer { padding: 1.25rem; flex-direction: column; gap: 0.5rem; }
  }
</style>
